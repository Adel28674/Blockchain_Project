<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blockchain.Controller.ProfilPageController">

    <BorderPane prefHeight="616.0" prefWidth="1000.0" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox spacing="10">
            <Button fx:id="btnSidebarAccueil" onAction="#onbtnSidebarAccueilClicked" text="Accueil" />
            <Button fx:id="btnSidebarWalletManager" onAction="#onbtnSidebarWalletManagerClicked" text="Wallet Manager" />
            <Button fx:id="btnSidebaMarket" mnemonicParsing="false" onAction="#onbtnSidebaMarketClicked" text="Market" />
            <Button fx:id="btnSidebaProfile" mnemonicParsing="false" text="Profil" />
            <!-- Ajouter d'autres boutons si nécessaire -->
        </VBox>
    </left>
      <center>
          <VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
              <Text text="Profil Utilisateur" />

              <GridPane hgap="10" vgap="10">
                  <padding>
                      <Insets top="20" right="20" bottom="20" left="20"/>
                  </padding>

                  <!-- Nom d'utilisateur -->
                  <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                  <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                  <!-- Email -->
                  <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                  <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
              </GridPane>

              <!-- Boutons -->
              <HBox spacing="10">
                  <Button text="Mettre à jour" fx:id="updateButton"/>
                  <Button text="Annuler" fx:id="cancelButton"/>
              </HBox>
          </VBox>
      </center>
    </BorderPane>
</AnchorPane>
